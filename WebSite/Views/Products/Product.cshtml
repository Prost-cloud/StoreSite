@using WebSite.DBModels
@using WebSite.ShowModels
@model ProductsShowModel
@{
    ViewData["Title"] = "Products";
    ViewData["Layaut"] = "~/css/site.css";
}
<h1>Products</h1>
@for(int i = 0; i < Model.ProductsList.Count(); i+=2)
{
    <div class = "inline-div">
        <div class = "border-item">  
            <p class = "Products-name">@Model.ProductsList[i].Name</p>
            <p class = "Products-description">@Model.ProductsList[i].Description</p> 
            <div class = "Products-Guid">@Model.ProductsList[i].guid</div> 
        </div>
        @if (Model.ProductsList.Count() > i + 1)
        {
            <div class = "border-item">  
                <p class = "Products-name">@Model.ProductsList[i+1].Name</p>
                <p class = "Products-description">@Model.ProductsList[i+1].Description</p> 
                <div class = "Products-Guid"><p>@Model.ProductsList[i+1].guid</p></div> 
            </div>
        }
    </div>
@*    @if(Model.ProductsCount > 10)
    {
        <div class = "PageJump"><li></li></div>
    }*@
}
